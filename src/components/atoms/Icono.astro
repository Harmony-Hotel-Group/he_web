---
// src/components/atoms/Icono.astro
import { Icon } from 'astro-icon/components'

interface Props {
    id?: string;
    name: string;
    lang?: string;
    className?: string;
    size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl';
    color?: 'primary' | 'secondary' | 'white' | 'black' | 'gray' | 'current';
    customColor?: string; // Para colores personalizados
    noPadding?: boolean;
    noMargin?: boolean;
}

const {
    id,
    lang,
    name,
    className = "",
    size = 'md',
    color = 'primary',
    customColor,
    noPadding = false,
    noMargin = false
} = Astro.props;

// Mapeo de tamaños
const sizeClasses = {
    'xs': 'w-3 h-3',
    'sm': 'w-4 h-4',
    'md': 'w-6 h-6',
    'lg': 'w-8 h-8',
    'xl': 'w-10 h-10',
    '2xl': 'w-12 h-12'
};

// Mapeo de colores (ajusta según tu paleta de colores)
const colorClasses = {
    'primary': 'text-primary-600', // Ajusta según tu color primario
    'secondary': 'text-secondary-600',
    'white': 'text-white',
    'black': 'text-black',
    'gray': 'text-gray-600',
    'current': 'text-current'
};

const paddingClass = noPadding ? '' : 'p-1';
const marginClass = noMargin ? '' : 'm-1';
---

<Icon
        id={id}
        name={name}
        class:list={[
            sizeClasses[size],
            paddingClass,
            marginClass,
            className
        ]}
        color='primary'
        style={customColor ? `color: ${customColor}` : undefined}
/>