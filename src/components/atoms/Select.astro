---
// src/components/atoms/Select.astro
interface Props {
  label?: string;
  name: string;
  id?: string;
  options: { value: string | number; label: string }[];
  value?: string | number;
  required?: boolean;
  disabled?: boolean;
  className?: string;
  labelClass?: string;
  selectClass?: string;
}

const { 
  label, 
  name, 
  id = name, 
  options = [], 
  value, 
  required = false, 
  disabled = false, 
  className, 
  labelClass, 
  selectClass 
} = Astro.props;
---

<div class:list={['flex flex-col', className]}>
  {label && (
    <label for={id} class:list={['block text-sm font-medium text-primary mb-1', labelClass]}>
      {label}
      {required && <span class="text-red-500">*</span>}
    </label>
  )}
  <select
    id={id}
    name={name}
    value={value}
    required={required}
    disabled={disabled}
    class:list={[
      'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm ',
      'text-primary focus:outline-none focus:ring-accent focus:border-accent sm:text-sm',
      disabled ? 'bg-gray-100 cursor-not-allowed' : 'bg-white',
      selectClass
    ]}
  >
    {options.map(option => (
      <option value={option.value}>{option.label}</option>
    ))}
  </select>
</div>
