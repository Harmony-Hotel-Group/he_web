---
import { useI18n } from '@/i18n/useI18n';
import LanguageSelector from './LanguageSelector.astro';
import CurrencySelector from './CurrencySelector.astro';

const { siteConfig } = await import('@/data/siteConfig.json');
const { t } = useI18n();
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <!-- Top bar with contact info and selectors -->
    <div class="flex justify-between items-center py-2 text-sm border-b border-gray-200">
      <div class="flex items-center space-x-4">
        <span class="text-gray-600">
          üìç {siteConfig.hotelLocation || 'Centro Hist√≥rico, Cuenca, Ecuador'}
        </span>
        <span class="text-gray-600">
          üìû {siteConfig.whatsappContact || '+593999999999'}
        </span>
      </div>

      <div class="flex items-center space-x-4">
        <LanguageSelector />
        <CurrencySelector />
      </div>
    </div>

    <!-- Main navigation -->
    <nav class="flex justify-between items-center py-4">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-hotel-primary">
          {siteConfig.siteName || 'Hotel Ensue√±os'}
        </a>
      </div>

      <!-- Navigation Menu -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-700 hover:text-hotel-primary transition-colors">
          {t('nav.home')}
        </a>
        <a href="/rooms" class="text-gray-700 hover:text-hotel-primary transition-colors">
          {t('nav.rooms')}
        </a>
        <a href="/tourism" class="text-gray-700 hover:text-hotel-primary transition-colors">
          {t('nav.tourism')}
        </a>
        <a href="/gastronomy" class="text-gray-700 hover:text-hotel-primary transition-colors">
          {t('nav.gastronomy')}
        </a>
        <a href="/contact" class="text-gray-700 hover:text-hotel-primary transition-colors">
          {t('nav.contact')}
        </a>
      </div>

      <!-- Mobile menu button -->
      <button class="md:hidden p-2" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>

    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="py-4 space-y-2">
        <a href="/" class="block py-2 text-gray-700 hover:text-hotel-primary">
          {t('nav.home')}
        </a>
        <a href="/rooms" class="block py-2 text-gray-700 hover:text-hotel-primary">
          {t('nav.rooms')}
        </a>
        <a href="/tourism" class="block py-2 text-gray-700 hover:text-hotel-primary">
          {t('nav.tourism')}
        </a>
        <a href="/gastronomy" class="block py-2 text-gray-700 hover:text-hotel-primary">
          {t('nav.gastronomy')}
        </a>
        <a href="/contact" class="block py-2 text-gray-700 hover:text-hotel-primary">
          {t('nav.contact')}
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>