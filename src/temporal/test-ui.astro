---
import { fetchData } from "@/utils/apiService.js";
import Card from "~/components/atoms/Card.astro";
// src/pages/test-ui.astro
import DevOnlyPage from "~/components/dev/DevOnlyPage.astro";
import { api } from "~/services/api.ts";
import BookingForm from "../components/organisms/booking/BookingForm.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const dataConfig = await api.fetchData("config");
const lang = "es";
---

<DevOnlyPage>
    <BaseLayout titleKey="site.title" lang={lang} config={dataConfig}>
        <div class="container mx-auto py-24 px-4">
            <h1 class="text-4xl font-bold text-primary text-center mb-4">UI Test Page</h1>
            <p class="text-center text-gray-600 mb-12">This page is for testing the booking form with Zod
                validation.</p>
            <Card>
                <BookingForm lang={lang} config={dataConfig}/>
            </Card>
        </div>
    </BaseLayout>
</DevOnlyPage>
