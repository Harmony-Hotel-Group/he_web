---
import BaseLayout from "@/layouts/BaseLayout.astro";
import UnderConstruction from "@/components/pages/UnderConstruction.astro";
import type { SiteConfig } from "@/types/config";
import { api } from "@/services/api.ts";

export const prerender = false;

const lang = "en";
const config = (await api.fetch("config", { params: { lang } })) as SiteConfig;
---

<BaseLayout titleKey="nav.gallery" lang={lang} config={config}>
    <UnderConstruction 
        title="Photo Gallery" 
        message="We are selecting the best images to showcase our facilities. Come back soon to see them."
        backPath="/en"
        backLabel="Back to Home"
    />
</BaseLayout>
