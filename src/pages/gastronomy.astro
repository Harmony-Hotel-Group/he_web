---
import { useI18n } from '@/i18n/useI18n';
import HotelLayout from '@/layouts/HotelLayout.astro';
import GastronomyCard from '@/components/hotel/GastronomyCard.jsx';

const { gastronomy } = await import('@/data/gastronomy.json');
const { t } = useI18n();

const title = t('gastronomy.title');
const description = t('gastronomy.description');
---

<HotelLayout {title} {description}>
  <!-- Page Header -->
  <section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        {t('gastronomy.title')}
      </h1>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        {t('gastronomy.subtitle')}
      </p>
    </div>
  </section>

  <!-- Gastronomy Grid -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {gastronomy.map(dish => (
          <GastronomyCard dish={dish} currency="USD" client:load />
        ))}
      </div>
    </div>
  </section>

  <!-- Restaurant Info -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-8">
          {t('gastronomy.restaurant')}
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="text-4xl mb-4">üçΩÔ∏è</div>
            <h3 class="text-xl font-semibold mb-2">{t('gastronomy.dining')}</h3>
            <p class="text-gray-600">
              {t('gastronomy.diningDescription')}
            </p>
          </div>

          <div class="text-center">
            <div class="text-4xl mb-4">üç∑</div>
            <h3 class="text-xl font-semibold mb-2">{t('gastronomy.wine')}</h3>
            <p class="text-gray-600">
              {t('gastronomy.wineDescription')}
            </p>
          </div>

          <div class="text-center">
            <div class="text-4xl mb-4">üéâ</div>
            <h3 class="text-xl font-semibold mb-2">{t('gastronomy.events')}</h3>
            <p class="text-gray-600">
              {t('gastronomy.eventsDescription')}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</HotelLayout>