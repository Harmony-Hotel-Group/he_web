---
// src/components/molecules/forms/DatePickerForm.astro
import DateRangePicker from '../../organisms/booking/DateRangePicker.astro';
import Label from '../../atoms/Label.astro'; // Import the Label atom

interface Props {
  label: string; // This will now be treated as a translation key
  t: (key: string) => string;
  lang: string;
  className?: string;
}

const { label, t, lang, className } = Astro.props;

// The DateRangePicker has a known internal ID that we can link to for accessibility.
const datePickerId = 'date-range-picker';
---

<div class:list={["flex flex-col", className]}>
  <!-- Fila 1: Label -->
  <Label 
    for={datePickerId} 
    t={t}
    textKey={label} // Pass the key to the Label component
    className="font-bold mb-2" 
  />
  
  <!-- Fila 2: DateRangePicker -->
  <DateRangePicker t={t} lang={lang} />
</div>
