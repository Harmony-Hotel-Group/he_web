---
import { Translations } from "@/i18n/translation.ts";
import { logger } from "@/services/logger.ts";
import type { SiteConfig } from "@/types/config";
import BookingForm from "./BookingForm.astro";

const log = logger("BookingBar");

interface Props {
	lang: string;
	config: SiteConfig;
}

const { lang, config } = Astro.props;

log.info("Props recibidas:", { lang, config: !!config });

const t = Translations(lang);
---

<div id="booking-bar" class="bg-white/30 backdrop-blur-md p-6 md:p-8 rounded-xl shadow-lg w-[90%] mx-auto">
    <div class="text-center mb-6">
        <h1 class="text-3xl font-bold text-black">{t('booking.title')}</h1>
        <p class="mt-2 text-md text-black">{t('booking.subtitle')}</p>
    </div>
    <BookingForm lang={lang} config={config}/>
</div>
