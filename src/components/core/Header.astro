---
// src/components/core/Header.astro

import CurrencySelector from "@/components/core/CurrencySelector.astro";
import LangSelector from "@/components/core/LangSelector.astro";
import { Translations } from "@/i18n/translation.ts";
import type { SiteConfig } from "@/types/config";

interface Props {
    lang: string;
    config: SiteConfig;
    headerBgClass?: string;
}

const { config, lang, headerBgClass = "" } = Astro.props;

const t = Translations(lang);

const uniqueRooms =
    config?.rooms?.filter((room, index, self) => {
        const getCat = (r: any) => r.category?.[lang] ?? r.category?.es;
        return index === self.findIndex((r) => getCat(r) === getCat(room));
    }) || [];

const uniqueDestinations =
    config?.destinations?.filter((destination, index, self) => {
        const getCat = (d: any) => d.category?.[lang] ?? d.category?.es;
        return (
            index === self.findIndex((d) => getCat(d) === getCat(destination))
        );
    }) || [];

const uniqueGastronomies =
    config?.gastronomies?.filter((gastronomy, index, self) => {
        const getCat = (g: any) => g.category?.[lang] ?? g.category?.es;
        return (
            index === self.findIndex((g) => getCat(g) === getCat(gastronomy))
        );
    }) || [];

const uniqueTours =
    config?.tours?.filter((tour, index, self) => {
        const getCat = (t: any) => t.category?.[lang] ?? t.category?.es;
        return index === self.findIndex((t) => getCat(t) === getCat(tour));
    }) || [];
---

<header
    class={`absolute top-0 left-0 right-0 z-50 text-background ${headerBgClass}`}
>
    <nav class="container mx-auto flex justify-between items-center p-4 lg:p-6">
        <!-- Left: Logo -->
        <div class="shrink-0 z-50">
            <a href="/" class="flex items-center space-x-2">
                <img
                    src="/favicon.png"
                    alt="MiLogo"
                    class="h-16 w-auto transition-transform hover:scale-105 duration-500"
                />
            </a>
        </div>

        <!-- Center: Navigation Links (Desktop) -->
        <div class="hidden lg:flex justify-center items-center space-x-8">
            <!-- Rooms Dropdown Container -->
            <div id="rooms-nav-container" class="relative group">
                <a
                    href="/rooms"
                    class="px-2 py-2 text-sm font-serif uppercase tracking-widest hover:text-accent transition-colors flex items-center gap-1 group-hover:text-accent"
                >
                    {t("nav.rooms")}
                    <svg
                        class="w-3 h-3 transition-transform group-hover:rotate-180 duration-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </a>
                <!-- Dropdown Menu -->
                {
                    uniqueRooms && (
                        <div
                            id="rooms-dropdown"
                            class="absolute left-1/2 -translate-x-1/2 top-full mt-2 w-56 bg-primary/95 backdrop-blur-md rounded-sm border-t-2 border-accent shadow-xl z-50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform origin-top"
                        >
                            {uniqueRooms[0].category &&
                                uniqueRooms.map((room) => (
                                    <a
                                        href={`/rooms/${room.id}`}
                                        class="block px-6 py-3 text-sm font-serif tracking-wide text-white/90 hover:bg-accent hover:text-white transition-colors border-b border-white/5 last:border-0"
                                    >
                                        {room.category?.[lang] ??
                                            room.category?.es}
                                    </a>
                                ))}
                        </div>
                    )
                }
            </div>

            <!-- Destinations Dropdown Container -->
            <div id="destinations-nav-container" class="relative group">
                <a
                    href="/destinations"
                    class="px-2 py-2 text-sm font-serif uppercase tracking-widest hover:text-accent transition-colors flex items-center gap-1 group-hover:text-accent"
                >
                    {t("nav.destinations")}
                    <svg
                        class="w-3 h-3 transition-transform group-hover:rotate-180 duration-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </a>
                {
                    uniqueDestinations && (
                        <div
                            id="destinations-dropdown"
                            class="absolute left-1/2 -translate-x-1/2 top-full mt-2 w-56 bg-primary/95 backdrop-blur-md rounded-sm border-t-2 border-accent shadow-xl z-50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform origin-top"
                        >
                            {uniqueDestinations[0].category &&
                                uniqueDestinations.map((destination) => (
                                    <a
                                        href={`/destinations/${destination.id}`}
                                        class="block px-6 py-3 text-sm font-serif tracking-wide text-white/90 hover:bg-accent hover:text-white transition-colors border-b border-white/5 last:border-0"
                                    >
                                        {destination.category?.[lang] ??
                                            destination.category?.es}
                                    </a>
                                ))}
                        </div>
                    )
                }
            </div>

            <!-- Gastronomy Dropdown Container -->
            <div id="gastronomy-nav-container" class="relative group">
                <a
                    href="/gastronomy"
                    class="px-2 py-2 text-sm font-serif uppercase tracking-widest hover:text-accent transition-colors flex items-center gap-1 group-hover:text-accent"
                >
                    {t("nav.gastronomy")}
                    <svg
                        class="w-3 h-3 transition-transform group-hover:rotate-180 duration-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </a>
                {
                    uniqueGastronomies && (
                        <div
                            id="gastronomy-dropdown"
                            class="absolute left-1/2 -translate-x-1/2 top-full mt-2 w-56 bg-primary/95 backdrop-blur-md rounded-sm border-t-2 border-accent shadow-xl z-50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform origin-top"
                        >
                            {uniqueGastronomies[0].category &&
                                uniqueGastronomies.map((gastronomy) => (
                                    <a
                                        href={`/gastronomy/${gastronomy.id}`}
                                        class="block px-6 py-3 text-sm font-serif tracking-wide text-white/90 hover:bg-accent hover:text-white transition-colors border-b border-white/5 last:border-0"
                                    >
                                        {gastronomy.category?.[lang] ??
                                            gastronomy.category?.es}
                                    </a>
                                ))}
                        </div>
                    )
                }
            </div>

            <!-- Tours Dropdown Container -->
            <div id="tours-nav-container" class="relative group">
                <a
                    href="/tours"
                    class="px-2 py-2 text-sm font-serif uppercase tracking-widest hover:text-accent transition-colors flex items-center gap-1 group-hover:text-accent"
                >
                    {t("nav.tours")}
                    <svg
                        class="w-3 h-3 transition-transform group-hover:rotate-180 duration-300"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 9l-7 7-7-7"></path>
                    </svg>
                </a>
                {
                    uniqueTours && (
                        <div
                            id="tours-dropdown"
                            class="absolute left-1/2 -translate-x-1/2 top-full mt-2 w-56 bg-primary/95 backdrop-blur-md rounded-sm border-t-2 border-accent shadow-xl z-50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform origin-top"
                        >
                            {uniqueTours[0].category &&
                                uniqueTours.map((tour) => (
                                    <a
                                        href={`/tours/${tour.id}`}
                                        class="block px-6 py-3 text-sm font-serif tracking-wide text-white/90 hover:bg-accent hover:text-white transition-colors border-b border-white/5 last:border-0"
                                    >
                                        {tour.category?.[lang] ??
                                            tour.category?.es}
                                    </a>
                                ))}
                        </div>
                    )
                }
            </div>

            <a
                href="/about"
                class="px-2 py-2 text-sm font-serif uppercase tracking-widest hover:text-accent transition-colors"
                >{t("nav.about")}</a
            >
            <a
                href="/contact"
                class="px-2 py-2 text-sm font-serif uppercase tracking-widest hover:text-accent transition-colors"
                >{t("nav.contact")}</a
            >
        </div>

        <!-- Right: Controls and Hamburger Button -->
        <div class="flex items-center space-x-4">
            <LangSelector currentLang={lang} />
            <CurrencySelector
                supportedCurrencies={config?.supportedCurrencies}
            />

            <button
                id="mobile-menu-button"
                class="text-white focus:outline-none lg:hidden"
            >
                <svg
                    class="w-8 h-8"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </nav>

    <!-- Mobile menu container -->
    <div
        id="mobile-menu"
        class="hidden sm:hidden bg-primary bg-opacity-95 absolute top-full left-0 right-0 py-4 text-center"
    >
        {/* Updated colors */}
        <div class="flex flex-col space-y-2">
            <!-- <a href="/rooms" class="block px-4 py-2 text-background hover:bg-accent hover:text-primary transition-colors">{t('nav.rooms')}</a>
            <a href="/destinations"
               class="block px-4 py-2 text-background hover:bg-accent hover:text-primary transition-colors">{t('nav.destinations')}</a>
            <a href="/gastronomy"
               class="block px-4 py-2 text-background hover:bg-accent hover:text-primary transition-colors">{t('nav.gastronomy')}</a>
            <a href="/tours" class="block px-4 py-2 text-background hover:bg-accent hover:text-primary transition-colors">{t('nav.tours')}</a>
            <a href="/about" class="block px-4 py-2 text-background hover:bg-accent hover:text-primary transition-colors">{t('nav.about')}</a>
            <a href="/contact"
               class="block px-4 py-2 text-background hover:bg-accent hover:text-primary transition-colors">{t('nav.contact')}</a>
            <a href="/booking"
               class="block bg-accent text-primary font-bold py-2 px-4 rounded-lg transition-opacity hover:opacity-90 mx-4 mt-2">
                {t('nav.booking')}
            </a> -->
        </div>
    </div>
</header>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Hamburger menu logic
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const mobileMenu = document.getElementById("mobile-menu");
        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener("click", () => {
                mobileMenu.classList.toggle("hidden");
            });
        }
    });
</script>
