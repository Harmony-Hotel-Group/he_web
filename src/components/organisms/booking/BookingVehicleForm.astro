---
// src/components/organisms/booking/BookingVehicleForm.astro
import { Translations } from "@/i18n/translation.ts";
import BookingVehicleSection from "./BookingVehicleSection.astro";

interface Props {
	lang: string;
	config: any;
}

const { lang, config } = Astro.props;
const t = Translations(lang);

const vehicleTypeOptions = [
	{ value: "auto", label: "Auto" },
	{ value: "suv", label: "SUV" },
	{ value: "camioneta", label: "Camioneta" },
	{ value: "furgoneta", label: "Furgoneta" },
	{ value: "buseta", label: "Buseta" },
	{ value: "bus", label: "Bus" },
	{ value: "otro", label: "Otro" },
];
---

<form id="booking-vehicle-form" method="post" class="space-y-4">
    <BookingVehicleSection lang={lang} vehicleTypeOptions={vehicleTypeOptions} />

    <!-- Información adicional para vehículos -->
    <div class="space-y-1">
        <label for="vehicleNotes" class="block text-sm font-medium text-gray-700">
            {t('booking.vehicles.notes') || 'Notas adicionales (opcional)'}
        </label>
        <textarea
                id="vehicleNotes"
                name="vehicleNotes"
                rows="2"
                placeholder={t('booking.vehicles.notesPlaceholder') || 'Información adicional sobre estacionamiento, horarios de llegada, etc.'}
                class="w-full px-3 py-2 border border-gray-300 rounded-md bg-white text-gray-900 focus:ring-2 focus:ring-amber-500 focus:border-transparent"
        ></textarea>
    </div>
</form>
