{
	"extends": "astro/tsconfigs/base",
	"include": [
		"src/**/*",
		"src/env.d.ts",
		".astro/types.d.ts",
		"astro.config.mjs",
		"tailwind.config.cjs"
	],
	"exclude": ["./node_modules", ".vscode", "dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"ignoreDeprecations": "6.0",
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"paths": {
			"@/components/*": ["src/components/*"],
			"@/layouts/*": ["src/layouts/*.astro"],
			"@/utils": ["src/utils/*.ts", "src/utils/*.js"],
			"@/i18n/*": ["src/i18n/*"],
			"@/styles/*": ["src/styles/*"]
		}
	}
}
