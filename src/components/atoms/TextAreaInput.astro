---
import { Translations } from "~/i18n/translation.ts";
interface Props {
    id: string;
    name?: string;
    keyPlaceholder?: string;
    rows?: number;
    classes?: string;
    lang: string
}

const {id, name, rows, keyPlaceholder, classes, lang} = Astro.props;
const t = Translations(lang);
---

<textarea
        id={id}
        name={name}
        rows={rows || 3}
        placeholder={t(keyPlaceholder)}
        class:list={["w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary focus:border-transparent", classes]}
></textarea>