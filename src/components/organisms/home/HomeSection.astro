---
// src/components/organisms/home/HomeSection.astro
import InfoCard from "~/components/molecules/cards/InfoCard.astro";
import { Translations } from "~/i18n/translation";

interface Item {
	id: string;
	src: string;
	name: { [key: string]: string };
}

interface Props {
	lang: string;
	titleKey: string;
	items: Item[];
	baseHref: string;
	bgColorClass?: string;
}

const {
	lang,
	titleKey,
	items,
	baseHref,
	bgColorClass = "bg-white",
} = Astro.props;
const t = Translations(lang);
---

<section class={`${bgColorClass} py-16`}>
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center text-primary mb-12">{t(titleKey)}</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {items.slice(0, 3).map(item => (
        <InfoCard
          href={`${baseHref}/${item.id}`}
          imageSrc={item.src}
          imageAlt={item.name[lang]}
          title={item.name[lang]}
          description={t('home.explore_category')}
          lang={lang}
        />
      ))}
    </div>
    <div class="text-center mt-12">
      <a href={baseHref} class="bg-primary text-white font-bold py-3 px-8 rounded-lg hover:bg-accent transition-colors duration-300">
        {t('buttons.see_more')}
      </a>
    </div>
  </div>
</section>
