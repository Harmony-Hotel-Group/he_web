---
interface Props {
	_id?: string;
	class?: string;
	alignX?: "start" | "center" | "end";
	alignY?: "start" | "center" | "end" | "stretch"; // Nueva prop
	gap?: string;
	wrap?: boolean;
}

const {
	_id,
	class: className = "",
	alignX = "start",
	alignY = "center", // Valor por defecto centrado
	gap = "gap-2",
	wrap = false,
} = Astro.props;

const justifyClass =
	alignX === "center"
		? "justify-center"
		: alignX === "end"
			? "justify-end"
			: "justify-start";

const itemsClass =
	alignY === "start"
		? "items-start"
		: alignY === "end"
			? "items-end"
			: alignY === "stretch"
				? "items-stretch"
				: "items-center";

const wrapClass = wrap ? "flex-wrap" : "flex-nowrap";
---

<div
        id={_id}
        class:list={[
            "flex flex-row ",
            justifyClass,
            itemsClass,
            wrapClass,
            gap,
            className,
        ]}
>
    <slot/>
</div>
