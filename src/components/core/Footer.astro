---
// src/components/core/Footer.astro
import Icono from "@/components/atoms/Icono.astro";
import type { SiteConfig, TranslationFunction } from "@/types/config";

interface Props {
	t: TranslationFunction;
	config?: SiteConfig;
	lang?: string;
}
const { t, config } = Astro.props;

const currentYear = new Date().getFullYear();
const startYear = 2021;

// Navegación principal
const mainLinks = [
	{ href: `/`, label: t("nav.home") },
	{ href: `/rooms`, label: t("nav.rooms") },
	{ href: `/destinations`, label: t("nav.destinations") },
	{ href: `/tours`, label: t("nav.tours") },
	{ href: `/gastronomy`, label: t("nav.gastronomy") },
];

// Páginas de interés
const interestLinks = [
	{ href: `/about`, label: t("footer.about") },
	{ href: `/gallery`, label: t("footer.gallery") },
	{ href: `/contact`, label: t("footer.contact") },
	{ href: `/booking`, label: t("footer.booking") },
];

// Información legal
const legalLinks = [
	{ href: `/privacy`, label: t("footer.privacy") },
	{ href: `/terms`, label: t("footer.terms") },
	{ href: `/cancellation`, label: t("footer.cancellation") },
	{ href: `/faq`, label: t("footer.faq") },
];

// Redes sociales (ajusta según tu config.json)
const socialLinks = config?.contactInfo?.socialLinks ?? [];
---

<footer class="bg-gradient-to-b from-gray-900 to-gray-950 text-gray-300">
    <!-- Contenido principal del footer -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">

            <!-- Columna 1: Sobre el Hotel (4 columnas) -->
            <div class="md:col-span-2 lg:col-span-4 space-y-6">
                <div>
                    <h3 class="text-white text-2xl font-serif tracking-in-expand font-medium mb-6 flex items-center gap-3">
                        <img src="/favicon.png" alt="Logo" class="h-10 w-auto opacity-90"/> {config?.siteName ?? "Harmony Hotel Group"}
                    </h3>
                    <p class="text-base text-gray-400 leading-loose max-w-sm">
                        {t('footer.description')}
                    </p>
                </div>
                <div class="space-y-4 pt-4">
                    <div class="flex items-start gap-2 group">
                        <div class="p-2 rounded-full bg-white/5 group-hover:bg-accent/20 transition-colors">
                             <svg class="w-5 h-5 text-accent shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                        </div>
                        <a href={config?.contactInfo?.linkMap} target="_blank"
                           class="text-gray-400 hover:text-white transition-colors mt-1.5 leading-tight">
                            {config?.contactInfo?.address}
                        </a>
                    </div>
                    
                    <div class="flex items-center gap-4 group">
                         <div class="p-2 rounded-full bg-white/5 group-hover:bg-accent/20 transition-colors">
                            <svg class="w-5 h-5 text-accent shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                        </div>
                        <a href={`tel:${config?.contactInfo?.whatsapp}`}
                           class="text-gray-400 hover:text-white transition-colors font-medium">
                            {config?.contactInfo?.whatsapp}
                        </a>
                    </div>

                    <div class="flex items-center gap-4 group">
                         <div class="p-2 rounded-full bg-white/5 group-hover:bg-accent/20 transition-colors">
                            <svg class="w-5 h-5 text-accent shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <a href={`mailto:${config?.contactInfo?.email}`}
                           class="text-gray-400 hover:text-white transition-colors">
                            {config?.contactInfo?.email}
                        </a>
                    </div>
                </div>
            </div>

            <!-- Columna 2: Navegación Principal (2 columnas) -->
            <div class="md:col-span-1 lg:col-span-2 lg:col-start-6 space-y-6">
                <h3 class="text-white text-lg font-serif tracking-wider font-semibold mb-6 flex items-center gap-2 after:content-[''] after:h-px after:w-8 after:bg-accent after:block">
                    {t('footer.navigation')}
                </h3>
                <ul class="space-y-2">
                    {mainLinks.map(link => (
                            <li>
                                <a
                                        href={link.href}
                                        class="text-sm text-gray-400 hover:text-accent hover:pl-2 transition-all duration-300 inline-block"
                                >
                                    {link.label}
                                </a>
                            </li>
                    ))}
                </ul>
            </div>

            <!-- Columna 3: Páginas de Interés (2 columnas) -->
            <div class="md:col-span-1 lg:col-span-2 lg:col-start-9 space-y-6">
                <h3 class="text-white text-lg font-serif tracking-wider font-semibold mb-6 flex items-center gap-2 after:content-[''] after:h-px after:w-8 after:bg-accent after:block">
                    {t('footer.interest')}
                </h3>
                <ul class="space-y-2">
                    {interestLinks.map(link => (
                            <li>
                                <a
                                        href={link.href}
                                        class="text-sm text-gray-400 hover:text-accent hover:pl-2 transition-all duration-300 inline-block"
                                >
                                    {link.label}
                                </a>
                            </li>
                    ))}
                </ul>
            </div>

            <!-- Columna 4: Legal & Redes Sociales (2 columnas) -->
            <div class="md:col-span-1 lg:col-span-2 lg:col-start-11 space-y-6">
                 <h3 class="text-white text-lg font-serif tracking-wider font-semibold mb-6 flex items-center gap-2 after:content-[''] after:h-px after:w-8 after:bg-accent after:block">
                    {t('footer.social')}
                </h3>
                 <div class="flex gap-3 mb-8">
                    {socialLinks && socialLinks.map(social => (
                            <a
                                    href={social.href}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="w-10 h-10 border border-gray-700 rounded-full flex items-center justify-center hover:bg-accent hover:border-accent hover:text-white transition-all duration-300 text-gray-400"
                                    aria-label={social.label}
                            >
                            <span class="text-lg">
                                <Icono name=`${social.icon}` size="lg"></Icono>
                            </span>
                            </a>
                    ))}
                </div>

                <div class="pt-4 border-t border-gray-800">
                    <ul class="space-y-2">
                        {legalLinks && legalLinks?.map(link => (
                                <li>
                                    <a
                                            href={link.href}
                                            class="text-xs text-gray-500 hover:text-gray-300 transition-colors"
                                    >
                                        {link.label}
                                    </a>
                                </li>
                        ))}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Separador -->
    <div class="border-t border-gray-800/50"></div>

    <!-- Copyright y créditos -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-500">
            <!-- Derechos reservados -->
            <div class="text-center md:text-left">
                <p class="font-medium text-gray-400">
                    &copy; {startYear} - {currentYear} <span class="text-accent">Harmony Hotel Group</span>
                </p>
                <p class="text-xs mt-1 opacity-60">
                    {t('footer.rights')}
                </p>
            </div>

            <!-- Créditos de desarrollo -->
            <div class="text-center md:text-right flex flex-col items-center md:items-end">
                <div class="flex items-center gap-2">
                    <span class="text-xs text-gray-600">Power by</span>
                    <a
                            href="https://innotec-itsc.com"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-sm font-bold text-gray-400 hover:text-blue-400 transition-colors inline-flex items-center gap-1 group"
                    >
                    <span class="group-hover:underline">Innotec ITSC</span>
                    <svg class="w-3 h-3 group-hover:translate-x-0.5 transition-transform" fill="none"
                         stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                </a>
                <p class="text-xs text-gray-600 mt-0.5">
                    Innovation Technology Software Company
                </p>
            </div>
        </div>
    </div>
</footer>