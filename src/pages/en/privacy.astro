---
import BaseLayout from "@/layouts/BaseLayout.astro";
import UnderConstruction from "@/components/pages/UnderConstruction.astro";
import type { SiteConfig } from "@/types/config";
import { api } from "@/services/api.ts";

export const prerender = false;

const lang = "en";
const config = (await api.fetch("config", { params: { lang } })) as SiteConfig;
---

<BaseLayout titleKey="footer.privacy" lang={lang} config={config}>
    <UnderConstruction 
        title="Privacy Policy" 
        message="Your privacy is important to us. We are currently drafting our data protection details."
        backPath="/en"
        backLabel="Back to Home"
    />
</BaseLayout>
