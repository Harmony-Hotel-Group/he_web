---
import BaseLayout from "@/layouts/BaseLayout.astro";
import UnderConstruction from "@/components/pages/UnderConstruction.astro";
import type { SiteConfig } from "@/types/config";
import { api } from "@/services/api.ts";

export const prerender = false;

const lang = "es";
const config = (await api.fetch("config", { params: { lang } })) as SiteConfig;
---

<BaseLayout titleKey="footer.cancellation" lang={lang} config={config}>
    <UnderConstruction 
        title="Política de Cancelación" 
        message="Estamos actualizando nuestras políticas para ofrecerte mayor flexibilidad. Pronto estarán disponibles."
        backPath="/"
        backLabel="Volver al Inicio"
    />
</BaseLayout>
