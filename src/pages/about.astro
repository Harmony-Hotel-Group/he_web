---
import BaseLayout from '../layouts/BaseLayout.astro';
import { useTranslations } from '../i18n/translation'; // Updated import

const lang = Astro.cookies.get('lang')?.value || 'es';
const t = useTranslations(lang);
---

<BaseLayout titleKey="nav.about" lang={lang}>
  <div class="container mx-auto py-12">
    <h1 class="text-4xl font-bold mb-4">{t('nav.about')}</h1>
    <p class="text-lg">
      Somos una empresa dedicada a crear las mejores experiencias web.
    </p>
  </div>
</BaseLayout>
