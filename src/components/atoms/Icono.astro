---
// src/components/atoms/Icono.astro
import { Icon } from "astro-icon/components";

interface Props {
	id?: string;
	name: string;
	lang?: string;
	className?: string;
	size?: "xs" | "sm" | "md" | "lg" | "xl" | "2xl";
	noPadding?: boolean;
	noMargin?: boolean;
	color?: string;
}

const {
	id,
	lang,
	name,
	className = "",
	size = "md",
	color = "#BF953D",
	noPadding = false,
	noMargin = false,
} = Astro.props;

// Tama√±os
const sizeClasses = {
	xs: "w-3 h-3",
	sm: "w-4 h-4",
	md: "w-6 h-6",
	lg: "w-8 h-8",
	xl: "w-10 h-10",
	"2xl": "w-12 h-12",
};

const paddingClass = noPadding ? "" : "p-1";
const marginClass = noMargin ? "" : "m-1";
---

<Icon
        id={id}
        name={name || 'default'}
        class:list={[
            sizeClasses[size],
            paddingClass,
            marginClass,
            className,
        ]}
        color={color}
/>