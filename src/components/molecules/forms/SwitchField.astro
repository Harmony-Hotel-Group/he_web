---
import Label from "../../atoms/Label.astro"; // Import Label.jsx
// src/components/molecules/forms/SwitchField.astro
import Switch from "../../atoms/Switch.astro"; // Changed from .astro to .jsx

interface Props {
	fieldId: string;
	name: string;
	lblKey: string; // This is the translation key
	lang: string;

	checked?: boolean;
	className?: string;
	onChange?: (value: string) => void; // Add onChange prop
}

const { fieldId, name, lblKey, checked, className, onChange } = Astro.props;
const switchId = `switch-${fieldId}`;
---

<div class:list={["flex items-center justify-between p-2  rounded-lg ", className]}>
    <Label forId={switchId} lblKey={lblKey}/>
    <Switch
            id={switchId}
            name={name}
            checked={checked}
            lblKey='key'
            onChange={onChange}
            classes="pl-4"
    />
</div>
