---
// src/components/atoms/Card.astro
interface Props {
  class?: string;
  padding?: string;
  id?: string;
}

const { class: className, padding = 'p-6', id } = Astro.props;
---

<div
  id={id}
  class:list={[
    'bg-white dark:bg-gray-800',
    'rounded-lg shadow-lg',
    'dark:border dark:border-gray-700',
    padding,
    className,
  ]}
>
  <slot />
</div>
