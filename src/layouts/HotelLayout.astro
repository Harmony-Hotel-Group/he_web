---
import BaseLayout from './BaseLayout.astro';
import ReservationBar from '@/components/global/ReservationBar.astro';

export interface Props {
  title?: string;
  description?: string;
  lang?: string;
  showReservationBar?: boolean;
}

const {
  title,
  description,
  lang = 'es',
  showReservationBar = true
} = Astro.props;
---

<BaseLayout {title} {description} {lang}>
  <slot />

  {showReservationBar && <ReservationBar />}
</BaseLayout>