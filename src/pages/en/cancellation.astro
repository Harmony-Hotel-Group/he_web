---
import BaseLayout from "@/layouts/BaseLayout.astro";
import UnderConstruction from "@/components/pages/UnderConstruction.astro";
import type { SiteConfig } from "@/types/config";
import { api } from "@/services/api.ts";

export const prerender = false;

const lang = "en";
const config = (await api.fetch("config", { params: { lang } })) as SiteConfig;
---

<BaseLayout titleKey="footer.cancellation" lang={lang} config={config}>
    <UnderConstruction 
        title="Cancellation Policy" 
        message="We are updating our policies to offer you more flexibility. They will be available soon."
        backPath="/en"
        backLabel="Back to Home"
    />
</BaseLayout>
