---
interface Props {
    title?: string;
    message?: string;
    backPath?: string;
    backLabel?: string;
}

const { 
    title = "Under Construction", 
    message = "We are working hard to bring you this experience. Please check back soon.",
    backPath = "/",
    backLabel = "Back to Home"
} = Astro.props;
---

<section class="min-h-[60vh] flex flex-col items-center justify-center text-center px-4 py-20 bg-gray-50">
    <div class="max-w-2xl mx-auto space-y-8">
        <!-- Icon -->
        <div class="inline-flex items-center justify-center p-6 bg-white rounded-full shadow-lg mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-accent">
                <path d="M22 22 2 22"/>
                <path d="M4 22 4 15"/>
                <path d="M20 22 20 15"/>
                <path d="M4 15 12 9 20 15"/>
                <path d="M10 22 10 15"/>
                <path d="M14 22 14 15"/>
                <path d="M12 9 12 2"/>
                <path d="M18 2 6 2"/>
            </svg>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary tracking-tight">
            {title}
        </h1>
        
        <p class="text-lg md:text-xl text-gray-600 leading-relaxed max-w-lg mx-auto">
            {message}
        </p>

        <div class="pt-8">
            <a href={backPath} class="inline-flex items-center justify-center px-8 py-3 text-base font-medium text-white transition-all transform bg-accent hover:bg-accent/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent rounded-sm shadow-md hover:shadow-lg hover:-translate-y-0.5">
                {backLabel}
            </a>
        </div>
    </div>
</section>
