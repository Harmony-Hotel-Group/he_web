---
import BaseLayout from '../layouts/BaseLayout.astro';
import { useTranslations } from '../i18n/translation'; // Updated import

const lang = Astro.cookies.get('lang')?.value || 'es';
const t = useTranslations(lang);
---

<BaseLayout titleKey="nav.contact" lang={lang}>
  <div class="container mx-auto py-12">
    <h1 class="text-4xl font-bold mb-4">{t('nav.contact')}</h1>
    <p class="text-lg">
      Ponte en contacto con nosotros a través de nuestro correo electrónico: contact@example.com
    </p>
  </div>
</BaseLayout>
