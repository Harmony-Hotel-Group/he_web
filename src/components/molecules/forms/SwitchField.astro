---
// src/components/molecules/forms/SwitchField.astro
import Switch from '../../atoms/Switch.astro';

interface Props {
  label: string;
  name: string;
  id?: string;
  checked?: boolean;
  className?: string;
}

const { label, name, id = name, checked, className } = Astro.props;
---

<div class:list={["flex items-center justify-between p-3 bg-white rounded-lg shadow-md", className]}>
  <Switch id={id} name={name} label={label} checked={checked} />
</div>
