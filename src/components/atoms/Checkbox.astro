---
// src/components/atoms/Checkbox.astro
interface Props {
	label: string;
	name: string;
	id?: string;
	checked?: boolean;
	disabled?: boolean;
	className?: string;
	labelClass?: string;
	inputClass?: string;
}

const {
	label,
	name,
	id = name,
	checked = false,
	disabled = false,
	className,
	labelClass,
	inputClass,
} = Astro.props;
---

<div class:list={['flex items-center', className]}>
  <input
    type="checkbox"
    id={id}
    name={name}
    checked={checked}
    disabled={disabled}
    class:list={[
      'h-4 w-4 text-accent border-gray-300 rounded focus:ring-accent',
      disabled ? 'bg-gray-100 cursor-not-allowed' : '',
      inputClass
    ]}
  />
  <label for={id} class:list={['ml-2 block text-sm text-primary', labelClass]}>
    {label}
  </label>
</div>
