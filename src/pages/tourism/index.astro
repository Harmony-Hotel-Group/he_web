---
import { useI18n } from '@/i18n/useI18n';
import HotelLayout from '@/layouts/HotelLayout.astro';
import TourismCard from '@/components/hotel/TourismCard.jsx';

const { tourism } = await import('@/data/tourism.json');
const { t } = useI18n();

const title = t('tourism.title');
const description = t('tourism.description');
---

<HotelLayout {title} {description}>
  <!-- Page Header -->
  <section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        {t('tourism.title')}
      </h1>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        {t('tourism.subtitle')}
      </p>
    </div>
  </section>

  <!-- Tourism Grid -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {tourism.map(touristSpot => (
          <TourismCard tourism={touristSpot} client:load />
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-hotel-primary text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">
        {t('tourism.cta')}
      </h2>
      <p class="text-xl mb-8">
        {t('tourism.ctaDescription')}
      </p>
      <div class="flex justify-center">
        <Button variant="secondary" size="lg">
          {t('tourism.contactGuide')}
        </Button>
      </div>
    </div>
  </section>
</HotelLayout>