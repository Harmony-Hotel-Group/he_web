---
// src/components/features/booking/BookingBar.astro
import DateRangePicker from './DateRangePicker.astro'; // Changed from .jsx to .astro
import BookingDropdown from '../../molecules/booking/BookingDropdown.jsx';
import BookingSwitch from '../../molecules/booking/BookingSwitch.jsx';

const {t, lang} = Astro.props;
---

<div class="bg-white/20 backdrop-blur-md p-6 rounded-xl shadow-lg w-[80%]">
    <!-- Fila 1: Fechas y Ocupantes -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 mb-4">
        <div class="md:col-span-1">
            <DateRangePicker t={t} lang={lang}/>
        </div>
        <BookingDropdown client:load label={t('booking.adults')} options={[1, 2, 3, 4, 5]}/>
        <BookingDropdown client:load label={t('booking.children')} options={[0, 1, 2, 3]}/>
        <BookingDropdown client:load label={t('booking.rooms')} options={[0, 1, 2, 3]}/>
    </div>

    <!-- Fila 2: Opciones Adicionales -->
    <div class="flex items-center space-x-4 mb-6">
        <BookingSwitch client:load label={t('booking.breakfast')}/>
        <BookingSwitch client:load label={t('booking.vehicle')}/>
    </div>

    <!-- Fila 3: Botón de Búsqueda -->
    <div class="text-center">
        <button class="w-full md:w-auto bg-accent text-primary font-bold py-3 px-12 rounded-lg shadow-md hover:opacity-90 transition-opacity">
            {t('booking.search')}
        </button>
    </div>
</div>
