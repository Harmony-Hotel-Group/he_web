---
// src/pages/UnderConstructionPage.astro

import UnderConstruction from "@/components/dev/UnderConstruction.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { api } from "@/services/api";

interface Props {
	titleHead: string;
	title: string;
	message: string;
	btnBackLabel: string;
	lang: string;
}

// export const prerender = false;

const { titleHead, title, message, btnBackLabel, lang } = Astro.props;

const config = await api.fetch("config");
---

<BaseLayout
    titleKey={titleHead}
    lang={lang}
    config={config}
    headerBgClass="bg-gradient-to-b from-gray-800 to-white shadow-md"
    py="py-10"
>
    <UnderConstruction
        title={title}
        message={message}
        btnBackLabel={btnBackLabel}
    />
</BaseLayout>
