---
interface Props {
	title?: string;
	message?: string;
	backPath?: string;
	backLabel?: string;
}

const {
	title = "Under Construction",
	message = "We are working hard to bring you this experience. Please check back soon.",
	backPath = "/",
	backLabel = "Back to Home",
} = Astro.props;
---

<section
    class="min-h-[50vh] flex flex-col items-center justify-center text-center py-20 bg-gray-50"
>
    <div class="max-w-2xl mx-auto space-y-8">
        <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary tracking-tight"
        >
            {title}
        </h1>

        <!-- Icon -->
        <div
            class="inline-flex items-center justify-center p-6 mb-6"
        >
            <canvas id="dotlottie-canvas" style="width: 300px; height: 300px;"
            ></canvas>
        </div>

        <p
            class="text-lg md:text-xl text-gray-600 leading-relaxed max-w-lg mx-auto"
        >
            {message}
        </p>

        <div class="pt-8">
            <a
                href={backPath}
                class="inline-flex items-center justify-center px-8 py-3 text-base font-medium text-white transition-all transform bg-accent hover:bg-accent/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent rounded-sm shadow-md hover:shadow-lg hover:-translate-y-0.5"
            >
                {backLabel}
            </a>
        </div>
    </div>
</section>

<script>
    import { DotLottie } from "@lottiefiles/dotlottie-web";

    document.addEventListener("DOMContentLoaded", () => {
        new DotLottie({
            autoplay: true,
            loop: true,
            canvas: document.querySelector(
                "#dotlottie-canvas",
            ) as HTMLCanvasElement,
            src: "src/assets/animations/builden.lottie", // replace with your .lottie or .json file URL
        });
    });
</script>
